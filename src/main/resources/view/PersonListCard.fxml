<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" >

  <HBox.margin>
    <Insets bottom="50.0" />
  </HBox.margin>

  <GridPane HBox.hgrow="ALWAYS" gridLinesVisible="true">
    <columnConstraints>
      <ColumnConstraints minWidth="40" />
      <ColumnConstraints minWidth="200" maxWidth="200"/>
      <ColumnConstraints minWidth="40" />

      <ColumnConstraints minWidth="2" />

      <ColumnConstraints minWidth="150" hgrow="ALWAYS" />

      <ColumnConstraints minWidth="2" />

      <ColumnConstraints minWidth="100" />
    </columnConstraints>

<!--    Index Box-->
    <HBox minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="10" right="15" bottom="10" left="15" />
      </padding>
      <VBox minHeight="105">
        <Label fx:id="id" styleClass="cell_big_label" />
      </VBox>
    </HBox>

<!--    Name and Client Status Box-->
    <HBox minHeight="105" GridPane.columnIndex="1">
      <padding>
        <Insets top="10" right="15" bottom="10" left="15" />
      </padding>
      <VBox alignment="CENTER_LEFT" minHeight="105">
        <GridPane VBox.vgrow="ALWAYS" vgap="20">
          <Label fx:id="name" text="\$first" styleClass="name_label" GridPane.rowIndex="1" wrapText="true" GridPane.halignment="CENTER"/>
          <Label fx:id="clientStatus" styleClass="cell_small_label" GridPane.rowIndex="2" />
        </GridPane>
      </VBox>
    </HBox>

<!--    Payment Status Box-->
    <HBox minHeight="105" GridPane.columnIndex="2">
      <padding>
        <Insets top="10" right="15" bottom="10" left="15" />
      </padding>

      <VBox minHeight="105" alignment="TOP_RIGHT">
        <padding>
          <Insets right="15" bottom="10" left="15" />
        </padding>
        <Label fx:id="paymentStatus" />
      </VBox>
    </HBox>

<!--    Rectangle Divider-->
    <HBox minHeight="105" GridPane.columnIndex="3">
      <padding>
        <Insets top="10" right="15" bottom="10" left="15" />
      </padding>
      <Rectangle width="2" height="85" fill="black"/>
    </HBox>

<!--    Project Status, email, phone, address, tags Box-->
    <HBox minHeight="105" GridPane.columnIndex="4">
      <padding>
        <Insets top="10" right="15" bottom="10" left="15" />
      </padding>

      <VBox alignment="CENTER" minHeight="105">
        <padding>
          <Insets top="10" right="5" bottom="10" />
        </padding>

        <GridPane VBox.vgrow="ALWAYS">
          <Label fx:id="projectStatus" styleClass="cell_small_label" GridPane.rowIndex="0" />
          <HBox spacing="5" alignment="CENTER_LEFT" GridPane.rowIndex="1">
            <padding>
              <Insets top="5" right="5" bottom="5" left="0" />
            </padding>
            <GridPane HBox.hgrow="ALWAYS">
              <VBox spacing="10" alignment="CENTER_LEFT" styleClass="person_info_box" GridPane.columnIndex="0" >
                <GridPane VBox.vgrow="ALWAYS" HBox.hgrow="NEVER">
                  <Label fx:id="email" styleClass="cell_small_label" text="\$email" GridPane.rowIndex="0" />
                  <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" GridPane.rowIndex="1" />
                  <Label fx:id="address" styleClass="cell_small_label" text="\$address" GridPane.rowIndex="2" />
                </GridPane>
              </VBox>
              <!--            <VBox spacing="10" GridPane.columnIndex="1" />-->
            </GridPane>
          </HBox>
          <FlowPane fx:id="tags" GridPane.rowIndex="2" />
        </GridPane>
      </VBox>
    </HBox>

<!--    Rectangle Divider Box-->
    <HBox minHeight="105" GridPane.columnIndex="5">
      <padding>
        <Insets top="10" right="15" bottom="10" left="15" />
      </padding>
      <Rectangle width="2" height="85" fill="black"/>
    </HBox>

<!--    Deadline Box-->
    <HBox minHeight="105" GridPane.columnIndex="6">
      <padding>
        <Insets top="10" right="15" bottom="10" left="15" />
      </padding>
      <VBox alignment="CENTER_LEFT" minHeight="105">
        <padding>
          <Insets top="10" right="5" bottom="10" left="15" />
        </padding>
        <GridPane VBox.vgrow="ALWAYS">
          <Label fx:id="deadline" styleClass="cell_small_label" GridPane.rowIndex="0" />
        </GridPane>
      </VBox>
    </HBox>

